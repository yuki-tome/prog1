#include <stdio.h>
#include <stlib.h>
#define N 20

typedef struct{
  int  id;       /* ID    */
  char name[20]; /* 名前   */
  int score;    /* 点数　*/
  char grade;   /* 成績 */
} Record;

void PrintData1(Record);
void PrintData2(Record *);
int InputData(Record *);

int main(){
  Record data[N]

    for(i=0;i<N;i++){

      if(InputData(&data[i])==EOF) break;

  printf("値渡し\n");
  PrintData1(data[0]);
  PrintData1(data[1]);

  printf("ポインタ（アドレス）渡し\n");
  PrintData2(&data[0]);
  PrintData2(&data[1]);
    }
  return 0;
}

void PrintData1(Record member1){

  printf("%d %20s %d %c\n",member1.id,member1.name,member1.score,member1.grade);
 
}

void PrintData2(Record *member1){
 
  printf("%d %20s %d %c\n",member1->id,member1->name,member1->score,member1->grade);

}
int InputData(Record *member1){

  while(1){

 scanf("%d %20s %d %c",&member1->id,&member1->name,&member1->score,&member1->grade)

  return *member1;
}
  
